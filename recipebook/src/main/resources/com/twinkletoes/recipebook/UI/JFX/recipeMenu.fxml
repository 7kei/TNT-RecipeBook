<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.twinkletoes.recipebook.UI.JFX.RecipeMenuController">
   <children>
      <Label fx:id="recipeText" text="Available Recipes:" />
      <ListView fx:id="recipeListView" prefHeight="200.0" prefWidth="200.0" />
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button onAction="#openRecipeAction" mnemonicParsing="false" text="Open Recipe" />
            <Button onAction="#backToRecipeMenuAction" mnemonicParsing="false" text="Back to Recipe Menu" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
